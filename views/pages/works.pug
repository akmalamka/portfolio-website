extends ../base.pug

block variables 
  - var template = 'works'

block content
  .works
    .works__wrapper 
    section.works__opening 
      .works__opening__wrapper
        each category in categories 
          .works__opening__title__wrapper
            .works__opening__title=category.data.type
    section.works__category 
      .works__category__wrapper
        each category in categories 
          .works__category__title=category.data.type
          a.works__category__link__text(href=category.data.link_url.url target="_blank")=category.data.link_text
    section.works__list 
      .works__list__wrapper
        each work in works 
          .works__list__title=work.data.title
          a.works__list__media__wrapper(href=work.data.url.url ? work.data.url.url : `/works/${work.uid}` target=work.data.url.url ? '_blank' : '')
            figure.works__list__media 
              img.works__list__media__image(alt=work.data.image.alt src=work.data.image.url) 