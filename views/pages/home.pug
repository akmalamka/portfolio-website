extends ../base.pug

block variables 
	- var template = 'home'

block content
	.home
		.home__wrapper 
			.home__title!=prismicDOM.RichText.asHtml(home.data.title)
			section.home__personalities 
				each personality, index in home.data.personalities 
					.home__personalities__text__wrapper
						p.home__personalities__text(class=`home__personalities__text--${personality.personalities_category.toLowerCase()}`)!=personality.personalities_title_1 === 'Wildcard' ? addSpan(personality.personalities_title_1) : personality.personalities_title_1
						p.home__personalities__text!=personality.personalities_title_2
					figure.home__personalities__images__media 
						img.home__personalities__images__media__image(alt=workImages[index].alt src=workImages[index].url) 
			section.home__story 
				.home__story__text!=prismicDOM.RichText.asHtml(home.data.story)
				each media in home.data.story_images 
					figure.home__story__media 
						img.home__story__media__image(alt=media.story_images_image.alt src=media.story_images_image.url)
			section.home__welcoming 
				.home__welcoming__text!=prismicDOM.RichText.asHtml(home.data.welcoming)
				
				